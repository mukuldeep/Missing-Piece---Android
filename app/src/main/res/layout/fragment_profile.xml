<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/golden"
    tools:context=".ui.profile.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_margin="1dp"
        android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_section"
        android:background="@color/golden.2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@color/golden.2">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/golden"
            android:hint="____ ___"
            android:textColorHint="@color/golden.5"
            android:text=""
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/golden.9"
            android:textColorHint="@color/golden.5"
            android:text=""
            android:hint="_____@____.__"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_below="@id/name"/>

        <TextView
            android:id="@+id/phoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/golden.9"
            android:hint="__________"
            android:textColorHint="@color/golden.5"
            android:text=""
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_below="@+id/email"/>

    </RelativeLayout>
    </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/upi_section"
            android:layout_below="@+id/profile_section"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/upi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@+id/upi_button"
                android:layout_toLeftOf="@+id/upi_button"
                android:textColor="@color/golden"
                android:textColorHint="@color/golden.5"
                android:ems="10"
                android:hint="upi e.g. missingpiece@oksbi"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/upi_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:padding="15dp"
                android:background="@color/golden.4"
                android:textColor="@color/golden"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/paypal_section"
            android:layout_below="@+id/upi_section"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="1dp"
            >

            <EditText
                android:id="@+id/paypal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textColor="@color/golden"
                android:layout_toStartOf="@+id/paypal_button"
                android:layout_toLeftOf="@+id/paypal_button"
                android:textColorHint="@color/golden.5"
                android:ems="10"
                android:hint="paypal e.g. abc@email.com"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/paypal_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:padding="15dp"
                android:background="@color/golden.4"
                android:textColor="@color/golden"
                android:layout_alignParentRight="true"
                android:text="Save" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/paypal_section">

            <TextView
                android:id="@+id/life_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="_ _ _"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/golden"

                android:textStyle="bold"
                android:textSize="45dp" />
            <TextView
                android:id="@+id/earn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blank Pieces Available"
                android:textColor="@color/golden"
                android:gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_below="@+id/life_count"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/referal"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_below="@+id/earn"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/golden"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:text="@string/share_text" />

                <TextView
                    android:id="@+id/watch_video_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/referal"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/golden"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:background="@color/golden.4"
                    android:text="Watch Video" />

                <TextView
                    android:id="@+id/share_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/watch_video_btn"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="@color/golden.4"
                    android:textColor="@color/golden"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:text="Share" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>